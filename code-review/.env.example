# Database Connection Template
# Copy this file to .env and configure your credentials

# MySQL Connection
DB_URL=jdbc:mysql://localhost:3306/code_review_db
DB_USERNAME=root
DB_PASSWORD=

# =====================================================
# CONFIGURATION EXAMPLES
# =====================================================

# Example 1: Default local MySQL
# DB_URL=jdbc:mysql://localhost:3306/code_review_db
# DB_USERNAME=root
# DB_PASSWORD=

# Example 2: Local MySQL with custom user
# DB_URL=jdbc:mysql://localhost:3306/code_review_db
# DB_USERNAME=code_review_user
# DB_PASSWORD=mySecurePassword123

# Example 3: MySQL with additional parameters
# DB_URL=jdbc:mysql://localhost:3306/code_review_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
# DB_USERNAME=root
# DB_PASSWORD=root

# Example 4: Remote MySQL server
# DB_URL=jdbc:mysql://192.168.1.100:3306/code_review_db
# DB_USERNAME=remote_user
# DB_PASSWORD=remotePassword

# Example 5: MySQL with specific charset
# DB_URL=jdbc:mysql://localhost:3306/code_review_db?useUnicode=true&characterEncoding=utf8
# DB_USERNAME=root
# DB_PASSWORD=

# =====================================================
# COMMON CONNECTION STRING PARAMETERS
# =====================================================
# useSSL=false                    - Disable SSL (local dev only)
# serverTimezone=UTC              - Set timezone
# allowPublicKeyRetrieval=true    - Allow public key retrieval
# autoReconnect=true              - Auto-reconnect on connection loss
# maxReconnects=3                 - Max reconnection attempts
# useUnicode=true                 - Enable Unicode
# characterEncoding=utf8          - Set character encoding

# =====================================================
# TROUBLESHOOTING
# =====================================================
# Error: "Access denied for user"
#   → Check username/password
#   → Verify user has permissions: GRANT ALL ON code_review_db.* TO 'user'@'localhost';
#
# Error: "Communications link failure"
#   → Check MySQL is running: systemctl status mysql (Linux) or services.msc (Windows)
#   → Verify port 3306 is open
#
# Error: "Unknown database 'code_review_db'"
#   → Create database: CREATE DATABASE code_review_db;
#
# Error: "The server time zone value is unrecognized"
#   → Add ?serverTimezone=UTC to connection string
